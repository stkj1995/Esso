---
// Importer nødvendige komponenter
import MainLayout from "../layouts/MainLayout.astro";
import Formular from "../components/Nyhedsbrev.astro";
import { Image } from 'astro:assets';
import Kontakt1 from '../assets/images/kontakt1.webp';
import Button from "../components/Button.astro";

const {variant= "primary" , size= "medium"} = Astro.props;

---

<MainLayout title="Kontakt">
<!-- Formular.astro -->
 <section class="formular px-spacing-m pt-spacing-6xl pb-spacing-4xl">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-spacing-m md:gap-spacing-5xl items-start">

      <!-- Venstre kolonne -->
      <div>
        <h1 class="font-EBGaramond md:text-52 text-44 font-medium text-color-mørkebrun mb-spacing-s">
          Vi vil gerne høre fra dig
        </h1>
        <p class="font-LivvicRegular text-18 text-color-mørkebrun mb-spacing-ml leading-28">
          Uanset om du har spørgsmål, ris eller ros, så er du altid velkommen til at kontakte os. <br>
          Udfyld blot kontaktformularen – så vender vi tilbage til dig så hurtigt vi kan.
        </p>

        <!-- Kontaktformular -->
        <form class="space-y-6">
          <div>
            <label for="navn" class="block text-color-mørkebrun mb-1">Navn</label>
            <input
              type="text"
              id="navn"
              name="navn"
              class="w-full border-0 border-b border-color-mørkebrun bg-transparent focus:outline-none focus:ring-0 focus:border-color-lysebrun py-2"
            />
          </div>

          <div>
            <label for="email" class="block text-color-mørkebrun mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full border-0 border-b border-color-mørkebrun bg-transparent focus:outline-none focus:ring-0 focus:border-color-lysebrun py-2"
            />
          </div>

          <div>
            <label for="besked" class="block text-color-mørkebrun mb-1">Besked</label>
            <textarea
              id="besked"
              name="besked"
              rows="6"
              placeholder="Skriv din besked her..."
              class="w-full border border-color-mørkebrun rounded-lg bg-transparent p-3 focus:outline-none"
            ></textarea>
          </div>

          <!-- Send-knap -->
          <div class="flex justify-center md:justify-start pt-spacing-s">
            <Button type="submit" variant="secondary" size="medium">Send</Button>
          </div>
        </form>
      </div>

      <!-- Højre kolonne med billede -->
      <div>
        <Image
          src={Kontakt1}
          alt="en kaffe bliver lavet"
          loading="lazy"
          class="h-[380px] w-[380px] object-cover object-[40%_88%] rounded-border-radius-25 md:h-[580px] md:w-[480px] md:mt-[70px] mt-spacing-2xl-(mobil)"
        />
      </div>

    </div>
  </section>

<section class="info text-color-mørkebrun px-spacing-m py-0 md:relative left-[-20px] md:my-spacing-2xl mb-spacing-6xl-(mobil)">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 md:gap-spacing-5xl gap-y-spacing-2xl-(mobil)">

    <!-- Følg os -->
    <div>
      <h2 class="font-EBGaramond font-medium md:text-44 text-36 md:mb-spacing-m mb-spacing-m-(mobil)">Følg os</h2>
      
      <div class="flex items-start md:gap-x-spacing-ml flex-col md:flex-row">
        <div class="mb-spacing-sm">
          <h3 class="font-EBGaramond md:text-28 text-20 mb-spacing-xs">Instagram</h3>
          <a href="https://www.instagram.com/esso_cph/" target="_blank" rel="noopener noreferrer" class="font-EBGaramond md:text-20 text-18 hover:underline">
            @esso_cph
          </a>
        </div>

        <div class="mb-spacing-sm">
          <h3 class="font-EBGaramond md:text-28 text-20 mb-spacing-xs">Facebook</h3>
          <a href="https://www.facebook.com/Realiserbar" target="_blank" rel="noopener noreferrer" class="font-EBGaramond md:text-20 text-18 hover:underline">
            /essocph
          </a>
        </div>
      </div>
    </div>

    <!-- Kontakt -->
    <div class="mb-spacing-sm">
      <h2 class="font-EBGaramond font-medium md:text-44 text-36 md:mb-spacing-m mb-spacing-m-(mobil)">Kontakt</h2>

      <div class="flex flex-col md:flex-row md:gap-x-spacing-5xl gap-y-spacing-xs">
        <div class="flex flex-col md:w-[45%] mb-spacing-sm">
          <h3 class="font-EBGaramond md:text-28 text-20 mb-spacing-xs">E-mail</h3>
          <a href="mailto:essocph@gmail.com" class="font-EBGaramond md:text-20 text-18 hover:underline">
            essocph@gmail.com
          </a>
        </div>

        <div class="flex flex-col md:w-[55%]">
          <h3 class="font-EBGaramond md:text-28 text-20 mb-spacing-xs">Telefon</h3>
          <h4 class="font-EBGaramond md:text-20 text-18 md:w-[200%]">+45 60 67 08 81</h4>
        </div>
      </div>
    </div>

    <!-- Åbningstider -->
    <div>
      <h2 class="font-EBGaramond font-medium md:text-44 text-36 md:mb-spacing-m mb-spacing-m-(mobil) md:pl-spacing-2xl">Åbningstider</h2>
      <h4 class="font-EBGaramond md:text-20 text-18 mb-0 md:pl-spacing-2xl md:w-[120%]">Tirs - Søn: Kl. 09-17</h4>
      <h4 class="font-EBGaramond md:text-20 text-18 md:pl-spacing-2xl md:w-[120%] pt-spacing-m-(mobil)">Lukket hver mandag</h4>
    </div>
  </div>
</section>


  <Formular />

</MainLayout>

<script>
    import { inView } from "motion";
        
        const elementmedanimation1 = document.querySelector(".formular");
        
        inView(elementmedanimation1, () => {
        
        elementmedanimation1.classList.add("animate__animated", "animate__fadeInUp");
        
        }); 
  
        const elementmedanimation2 = document.querySelector(".info");
        
        inView(elementmedanimation2, () => {
        
        elementmedanimation2.classList.add("animate__animated", "animate__fadeInUp");
        
        }); 

    </script>
