import Nyhedsbrev from "../components/Nyhedsbrev.astro";
import Omoshero from '../assets/images/omoshero_ny.webp';
import { Image } from 'astro:assets';
import Button from '../components/Button.astro';
import essofacadeny from '../assets/images/essofacade_ny.webp';
import omosny from '../assets/images/omos_ny.webp';
import vin from '../assets/images/vinillu.webp';
import oliven from '../assets/images/oliven.webp';
import citattegn1 from '../assets/images/citattegn1.webp';
import citattegn2 from '../assets/images/citattegn2.webp';
import keld_bryg from '../assets/images/keld_bryg.webp';
import oel3 from '../assets/images/oel3.webp';
import events from '../assets/images/events.webp';
---

<MainLayout title="Om os">
      <section class="pb-20">
       <div class="relative">
          <div class="h-[580px] flex justify-center items-center bg-pimg2 bg-fixed bg-cover object-[40%_50%] md:bg-center bg-no-repeat md:h-[630px]"></div>
       
         <div class="absolute inset-0 text-center pl-10 pt-16 m-20 mt-52 md:pt-56  md:mt-20 md:m-0">
             <h1 class="text-44 md:text-52 font-EBGaramond md:mb-[-40px] mb-10 text-color-mørkebrun font-semibold md:font-semibold">Om os</h1>
         </div>
       </div>
      </section>

<!-- bg-bottom -->

