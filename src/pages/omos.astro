---
// Importer nødvendige komponenter
import MainLayout from "../layouts/MainLayout.astro";
import Nyhedsbrev from "../components/Nyhedsbrev.astro";
import Omoshero from '../assets/images/omoshero.webp';
import { Image } from 'astro:assets';
---

<MainLayout title="Om os">
    <section class="pb-48">
        <div class="relative">
          <Image 
                    src={Omoshero} alt='billede af skammel med vin og glas' class="h-[500px] w-[501px] scale-150 md:max-h-[600px] md:w-screen object-cover"/>
        <div class="absolute inset-0 text-center pt-24 md:ml-16 md:mt-20 m-20 mt-52 md:m-0">
        <h1 class="text-44 md:text-52 font-EBGaramond md:mb-[-40px] mb-10 text-color-mørkebrun">Om os</h1>
        </div>
        </div>
      </section>
    
 
<Nyhedsbrev></Nyhedsbrev>
</MainLayout>
