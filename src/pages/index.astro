import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Formular from "../components/Nyhedsbrev.astro";
import { Image } from 'astro:assets';
---
<MainLayout title="Forside">

  <!-- Hero med stemningsvideo -->
 
 </section>
  <div class="video">
        <video src="/ny-esso-hero-stemning.mp4" autoplay loop muted class="h-screen md:w-screen object-cover pb-spacing-6xl"></video>
      </div>    

       <div class="absolute bottom-28 left-1/2 transform -translate-x-1/2 z-10">
    <img
      src="/pilned.svg"
      alt="Scroll ned"
      class="w-12 h-12"
    />
  </div>
  </section>





 <!-- Kort intro og billeder -->
 <section>
   <h2 class="font-EBGaramond">Velkommen til Esso</h2>
   <p class="font-Livvic ">Din hyggelige café og kreative space.
   </p>
 </section>

 <!-- CTA -->

 <!-- Afsnit om Esso + CTA-knap (mikro) til Om os -->
 <section>
  <h2>Mikrokonvertering: Kort om Esso og CTA til Om os, fx "Læs mere om os"</h2>
</section>
 
 <!-- Afsnit om fysiske salgsprodukter + CTA-knap (makro) til Menu-->
 <section>
  <h2>Makrokonvertering: Kort om produkter og CTA til Menu, fx "Se menu"</h2>
</section>
 
 <!-- Instagram Feed -->
 <section>
  <h2>Sektion med Instagram-feed (galleri)</h2>
</section>

 <!-- Nyhedsbrev: Kontaktformular med CTA-knap -->
