---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Formular from "../components/Nyhedsbrev.astro";
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="Forside">

  <!-- Hero med stemningsvideo -->
  <section>
    <h2 class="font-semibold, text-52 font-">Stemningsvideo + logo </h2>
  </section>

 <!-- Kort intro og billeder -->
 <section>
   <h2>Velkommen til Esso</h2>
   <p>Din hyggelige café og kreative space.</p>
 </section>

 <!-- CTA -->

 <!-- Afsnit om Esso + CTA-knap (mikro) til Om os -->
 <section>
  <h2>Mikrokonvertering: Kort om Esso og CTA til Om os, fx "Læs mere om os"</h2>
</section>
 
 <!-- Afsnit om fysiske salgsprodukter + CTA-knap (makro) til Menu-->
 <section>
  <h2>Makrokonvertering: Kort om produkter og CTA til Menu, fx "Se menu"</h2>
</section>
 
 <!-- Instagram Feed -->
 <section>
  <h2>Sektion med Instagram-feed (galleri)</h2>
</section>

 <!-- Nyhedsbrev: Kontaktformular med CTA-knap -->
  <Formular />

</MainLayout>