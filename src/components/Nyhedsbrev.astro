    <form action="/nyhedsbrev" method="POST">
      <label for="name" class="block text-sm">Navn:</label>
      <input type="text" id="name" name="name" class="w-full p-2 mb-4 border border-gray-300 rounded-md" required />
      
      <label for="email" class="block text-sm">E-mail:</label>
      <input type="email" id="email" name="email" class="w-full p-2 mb-4 border border-gray-300 rounded-md" required />
      
