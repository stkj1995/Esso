---
import Image from "astro/components/Image.astro";
import ESSOLogo from '../assets/images/ESSO_logo.webp';
---

<header class="bg-color-creme">
  <!-- Header container -->
  <div class="flex justify-between items-center w-full p-4">

    <!-- Logo -->
    <div class="flex items-center">
      <a href="/">
        <Image src={ESSOLogo} alt="ESSO logo" class="ml-4 w-20 h-20 rounded-full object-cover" />
      </a>
    </div>

    <!-- Mobile menu (vises som standard) -->
    <div class="flex md:hidden mr-4">
      <!-- Erstat med rigtig menu-ikon eller knap -->
      <button class="text-lg font-semibold">☰</button>
    </div>

    <!-- Navigation (kun desktop) -->
    <nav class="hidden md:flex justify-end space-x-8">
      <ul class="flex space-x-6 mr-10">
        <li><a href="/" class="text-lg hover:text-blue-500">Forside</a></li>
        <li><a href="/menu" class="text-lg hover:text-blue-500">Menu</a></li>
        <li><a href="/omos" class="text-lg hover:text-blue-500">Om os</a></li>
        <li><a href="/kontakt" class="text-lg hover:text-blue-500">Kontakt</a></li>
      </ul>
    </nav>
  </div>
</header>


