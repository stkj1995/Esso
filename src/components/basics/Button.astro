---
const { 
  textMobile, 
  textDesktop, 
  link, 
  backgroundColor, 
  textColor, 
  size, 
  additionalClasses 
} = Astro.props;
---

<!-- Button for Desktop & Mobile -->
<a href={link} 
   class={`inline-block px-6 py-3 text-white rounded-lg ${backgroundColor} ${textColor} ${size} ${additionalClasses}`}>
   
   <!-- Desktop Version -->
   <span class="hidden md:inline">{textDesktop}</span>
   
   <!-- Mobile Version -->
   <span class="md:hidden">{textMobile}</span>

</a>

