---
import Button from './Button.astro';
import { Image } from 'astro:assets';
import ESSOLogo from '../assets/images/ESSO_logo.webp';
import IconPilop from '/src/assets/images/icon_pilop.webp';
---

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">


  <!-- Logo inside the mobile menu -->
        <div class="flex items-start justify-start md:ml-28 ml-8 pt-12">
          <a href="/">
            <Image src={ESSOLogo} alt="ESSO logo" class="md:w-32 md:h-32 w-20 h-20 rounded-full object-cover" />
          </a>
        </div>
      <hr class="max-w-xs mt-16 mb-8 md:mb-16 md:max-w-7xl mx-auto border-t-1 border-color-hvid">

<footer class="justify-center md:ml-20 md:mr-20 text-20 flex flex-col space-y-spacing-3xl-(mobil) md:flex-row md:space-y-0 md:space-x-spacing-8xl">
     
  <!-- Adresse -->
  <div class="text-16 md:w-80 mx-10 my-0">
    <h1 class="text-52 md:text-44 font-EBGaramond mb-spacing-sm-(mobil) md:mb-spacing-sm">Esso Cph</h1>
    <p class="">Vigerslev Allé 36, st., dør 1</p>
    <p>2500 Valby</p>
    <p>essocph@gmail.com</p> 
    <p>+45 60 67 08 81</p>
  </div>

  <!-- Åbningstider -->
  <div class="text-16 md:w-80 mx-10 my-10">
    <h3 class="text-52 md:text-44 font-EBGaramond mb-spacing-sm-(mobil) md:mb-spacing-sm">Åbningstider</h3>
    <p>Tirs - Søn: Kl. 09 - 17</p>
    <p>Lukket hver mandag</p>
  </div>

  <!-- SoMe -->
  <div class="text-16 md:w-80 mx-10 my-10">
    <h3 class="text-52 md:text-44 font-EBGaramond mb-spacing-sm-(mobil) md:mb-spacing-sm">Følg os</h3>
    <div class="flex flex-row gap-spacing-s-(mobil) md:gap-spacing-sm">
      <ion-icon name="logo-facebook"></ion-icon>
      <ion-icon name="logo-instagram"></ion-icon>
    </div>
  </div>

<!-- Pil ikon i højre hjørne -->
<div class="absolute bottom-0 right-10 z-10">
  <Image src={IconPilop} alt="Pil ikon" class="w-4 h-8 z-50" />
</div>



</footer>

