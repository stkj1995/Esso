---
import Button from './Button.astro';
import { Image } from 'astro:assets';
import ESSOLogo from '../assets/images/ESSO_logo.webp';
import IconPilop from '/src/assets/images/icon_pilop.webp';
import InstagramIkon from '/src/assets/images/Instagram_ikon.webp';
import FacebookIkon from '/src/assets/images/Facebook-ikon.webp';
---

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
 
<footer class="relative justify-center md:ml-20 md:mr-20 text-18 flex flex-col space-y-spacing-xl-(mobil) md:flex-row md:space-y-0 md:space-x-spacing-7xl"></footer>
<!-- Logo -->
  <div class="flex items-start justify-start pl-5 mx-8 mb-8 pt-10 md:pt-10 md:ml-28">
    <a href="/">
      <Image src={ESSOLogo} alt="ESSO logo" class="md:w-32 md:h-32 w-20 h-20 rounded-full object-cover" />
    </a>
  </div>

    <!-- Vandret streg -->
  <hr class="max-w-sm mt-5 mb-10 md:mb-10 md:max-w-7xl mx-auto border-t-1 border-color-hvid">
 
  <div class="relative justify-center md:pb-20 md:ml-20 md:mr-20 text-18 flex flex-col space-y-spacing-4xl-(mobil) md:flex-row md:space-y-0 md:space-x-spacing-7xl">

  <!-- Adresse -->
  <div class="text-18 md:w-80 mx-14 my-0 ">
    <h1 class="leading-38 text-52 md:text-44 font-EBGaramond mb-spacing-sm-(mobil) md:mb-spacing-sm">Esso Cph</h1>
    <p class="font-LivvicRegular text-18 leading-28">Vigerslev Allé 36, st., dør 1</p>
    <p class="font-LivvicRegular text-18 leading-28">2500 Valby</p>
  <p class="font-LivvicRegular text-18 leading-28">
  <a href="mailto:essocph@gmail.com" class="hover:underline ">
    essocph@gmail.com
  </a>
</p>

    <p class="font-LivvicRegular text-18 leading-28">+45 60 67 08 81</p>
  </div>

  <!-- Åbningstider -->
  <div class="text-18 md:w-80 mx-14 my-0">
    <h1 class="text-52 md:text-44 font-EBGaramond mb-spacing-sm-(mobil) md:mb-spacing-sm leading-38">Åbningstider</h1>
    <p class="font-LivvicRegular text-18 leading-28">Tirs - Søn: Kl. 09 - 17</p>
    <p class="font-LivvicRegular text-18 leading-28">Lukket hver mandag</p>
  </div>

  <!-- SoMe -->
    <div class="text-18 md:w-80 mx-14 my-0">
  <h1 class="text-52 md:text-44 font-EBGaramond mb-spacing-sm-(mobil) md:mb-spacing-sm leading-38">Følg os</h1>
 <div class="flex flex-row gap-spacing-sm-(mobil) md:gap-spacing-s mb-10">   
  <a href="https://www.facebook.com/Realiserbar" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
    <Image src={FacebookIkon} alt="Facebook ikon" class="w-5 h-10 md:w-6 md:h-11 hover:opacity-80 transition-opacity duration-200" />
  </a>
  <a href="https://www.instagram.com/esso_cph/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
    <Image src={InstagramIkon} alt="Instagram ikon" class="mt-1 w-8 h-8 md:w-10 md:h-10 hover:opacity-80 transition-opacity duration-200" />
  </a>  
  </div>
</div>

<!-- Pil ikon i nederste højre hjørne -->
<div class="absolute bottom-10 right-12 md:right-4 z-50">
  <a href="#" aria-label="Scroll til toppen">
    <Image src={IconPilop} alt="Pil ikon" class="w-4 h-8 z-50" />
  </a>
</div>

</div>




